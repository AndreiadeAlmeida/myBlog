<% provide(:page_title, @post.title) %>

<div class="container post-info">
  <div class="row">
    <%= image_tag(@post.image_url, class: "img-responsive") %>
    <h1><%= @post.title %></h1>
    <p><%= @post.body %></p>
  </div>

  <div class="row links">
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
    <%= link_to 'Remove', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>

</div>
